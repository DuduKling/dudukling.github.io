header.homeHeader
  div.background

  nav.menu#js-menu.-top
    a(href="index.html").logo &lt; #{info.title} /&gt;

    label.hamburgerMenu(for="respMenu")
      .line1
      .line2
      .line3

    input(type="checkbox" class="respMenu" id="respMenu")

    ul
      li
        a(href="index.html") #{menu.home}
      li
        a(href="#sobre") #{menu.about}
      li
        a(href="#portfolio") #{menu.portfolio}
      li
        a(href="#blog") #{menu.blog}
      li
        a(href=info.resume target="_blank" rel="noopener") #{menu.resume}
      li
        a(href="#contato") #{menu.contact}
      li
        button#langBtn #{menu.language}
      li
        button#themeBtn #{menu.theme}

  div.present
    div.presentAvatarContainer
      div.avatarBackground
        img.avatar(src="assets/images/avatar.png" alt=strings.header.presentAlt)
    h1.headerName1
      span #{info.name}
      br
    h1.headerName2
      span #{info.surname}
      br
    div.mouseScroll
      div.mouse
        div.scroll
